<Window x:Class="PictureManager.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="300" Width="300" ResizeMode="NoResize" Icon="icon.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50px"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Autorzy projektu" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <Image Source="karol.png" MaxWidth="130px" MaxHeight="170px" Grid.Column="0" Grid.Row="1" />
        <Image Source="mateusz.png" MaxWidth="130px" MaxHeight="170px" Grid.Column="1" Grid.Row="1" />
        <TextBlock Grid.Column="0" Grid.Row="2" Text="inż. Karol Żurek" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="inż. Mateusz Skalski" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
